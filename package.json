{
  "name": "playwright-cucumber-bdd-ts",
  "version": "1.0.0",
  "scripts": {
    "parallel:run:in:uat": "cross-env TEST_ENV=uat cucumber-js --require-module ts-node/register --parallel 4",
    "wip:in:uat": "cross-env TEST_ENV=uat cucumber-js --require-module ts-node/register --tags '@wip'",
    "wip:test:test": "cross-env TEST_ENV=test cucumber-js --require-module ts-node/register --tags '@wip'",
    "wip:test:dev": "cross-env TEST_ENV=dev cucumber-js --require-module ts-node/register --tags '@wip'",
    "try:test:dev": "cross-env TEST_ENV=dev cucumber-js --require-module ts-node/register --tags '@try'",
    "wip:test:staging": "cross-env TEST_ENV=staging cucumber-js --require-module ts-node/register --tags '@wip'",
    "test:default": "cucumber-js --profile default --retry 2",
    "test:rerun": "cucumber-js --profile rerun   --retry 2",
    "generate:allure-report": "npx allure generate allure-results --clean -o allure-report",
    "open:allure-report": "npx allure open allure-report",
    "test:run": "cross-env TEST_ENV=dev cucumber-js --require-module ts-node/register"
  },
  "dependencies": {
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.55.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.2",
    "allure-js-commons": "^3.4.1",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}